{
  "name": "vue-word-highlighter",
  "version": "0.0.1",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.min.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:package": "rollup -c",
    "serve": "vite preview",
    "lint": "eslint '{src,web}/**/*.{js,ts,vue}'",
    "lint:fix": "eslint --fix '{src,web}/**/*.{js,ts,vue}'",
    "format": "prettier '{src,web}/**/*.{js,ts,vue}'",
    "format:fix": "prettier --write '{src,web}/**/*.{js,ts,vue}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "vue-demi": "^0.11.2"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^16.4.8",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "@vitejs/plugin-vue": "^1.3.0",
    "@vue/compiler-sfc": "^3.0.5",
    "bulma": "^0.9.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^7.15.0",
    "husky": "^7.0.0",
    "lint-staged": ">=10",
    "prettier": "2.3.2",
    "rollup": "^2.55.1",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.36.0",
    "scss": "^0.2.4",
    "typescript": "^4.3.2",
    "vite": "^2.4.4",
    "vue": "^3.0.5",
    "vue-tsc": "^0.2.2"
  },
  "lint-staged": {
    "{src,web}/**/*.{js,ts,vue}": ["yarn format:fix","yarn lint:fix"]
  }
}
